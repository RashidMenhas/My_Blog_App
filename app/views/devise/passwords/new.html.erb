<div class='container'>
<div class='border'>

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:'Email@gmail.com', class:'text-input form-control form-control-lg' %>
    <br/>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class:'btn btn-outline-primary' %>
  </div>
  <br/>
  
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>